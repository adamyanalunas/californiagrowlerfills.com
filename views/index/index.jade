doctype html
html(lang='en')
  head
    meta(charse='utf8')
    title California Growler Guide
    != css('app')
    script(src='/js/vendor/jquery.min.js')
    script(src='js/lib/tabletop1.3.3.js')
    //- script(src='js/lib/sheetsee.js')
    script(src='js/lib/transparency.min.js')

  body
    h1 California Growler Fill Guide

    section(role="main")
      //- input#fullTableFilter(type="text", placeholder="filter byâ€¦")
      table#fullTable
        thead
          tr
            th Brewery
            th Score
            th Fills Blanks?
            th Branded from any brewery?
            th One Liter Growlers?
            th Comments
            th Last Updated
        tbody.breweries
          tr
            td.brewery
            td.score
            td.blanks
            td.otherbreweries
            td.oneliters
            td.comments
            td.lastupdated

      table#breweryListing
        thead
          tr
            th Brewery
            th Score
        tbody

      div#bucket

      != js('vendors/lodash')
      != js('vendors/backbone-min')
      script(src='/js/vendor/react.min.js')
      script(src='/js/vendor/JSXTransformer.js')
      != js('models/Brewery')
      != js('collections/Breweries')
      != js('views/brewery.view')
      script(src='js/init.js')

  footer
    p
      | Data gathered by&nbsp;
      a(href="https://twitter.com/SageOlson") Sage Olson
      | . Site by&nbsp;
      a(href="https://twitter.com/adamyanalunas") Adam Yanalunas
      | .
    p Crafted in #{pageData.year}
